<p>
  <h2 style="color: #fff"><%= @category.name %></h2>  
</p>
<hr />
<h3 style="color: #fff">Posts on this category</h3>
<hr />
<p>
<% if @category.posts.each do |post| %>
  <div class="post">
      <h2 class="title"><%= link_to post.title, post %></h2>
      <div class="entry">
          <p><%= post.body %></p>
      </div>
      <div class="byline">
        <table class="content_table">
          <thead>
            <tr>
              <th>
                <p class="meta">May 07, 2012 Posted by <a href="#">Someone</a></p>
              </th>
              <th>
                <a href="#" title="b0x w">Comments</a></p>
              </th>
            </tr>
          </thead>
        </table>
      </div>
  </div>
<% end.empty? %>
  <p style="color: #fff">Sorry, there are no posts in this category</p>
<% end %>
</p>

<%= link_to 'Back', categories_path %>
