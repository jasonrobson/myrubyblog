<div class="post">
    <h1><%= @post.title %></h1>
    <small><%= @post.created_at.strftime("%d / %b / %Y") %></small>
    <p><%= @post.body %></p>
    <p><%= link_to @post.category.name, category_path(:id => @post.category.id) %></p>
    <%= link_to "Back", posts_path %> | <%= link_to "Edit Post", edit_post_path %> | <%= link_to "Delete", @post, :confirm => "Are you sure you want to delete?", :method => :delete %>
</div>