<hr />
<h1 class="content_page_title">Edit Post</h1>
<hr class="content_page_hr"/>
<%= form_for @post do |f| %>
    <p style="color:white">
        <%= f.label :title %><br />
        <%= f.text_field :title %><br />
    </p>
    <p>
        <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => "Select One"} %><br />
    </p>
    <p style="color:white">
        <%= f.label :body %><br />
        <%= f.text_area :body %><br />
    </p>
    <p>
        <%= f.submit "Update Post", id: 'content-submit' %><br />
    </p>
<% end %>
<%= link_to "Back", post_path %>